<div class="collection-list">
    <h2>Collections</h2>
    <div class="row">
      {% for collection in collections limit: 2%}          
        <div class="col-md-6 col-6">
          <div class="large-collection">
            <a href="{{ collection.url }}">
              <figure>
                <img class ="collection-img" src="{{ collection.image | img_url: '1000x1000' }}">
              </figure>            
            </a> 
          </div>        
        </div>
      {%endfor%}
    </div>

    <div class="row">
      {% for collection in collections limit: 4%}          
        <div class="col-md-3 col-6">
          <div class="medium-collection">
            <a href="{{ collection.url }}">
              <figure>
                <img class ="collection-img" src="{{ collection.image | img_url: 'large' }}">
              </figure>          
            </a>  
          </div>
        </div>
      {%endfor%}
    </div>
         
</div>